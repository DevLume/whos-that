<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#242a31"
	android:minWidth="25px"
	android:minHeight="25px"
	android:weightSum="100">
	<TextView
		android:layout_marginTop="50dp"
		android:text="Whose test do you want to take?"
		android:textColor="#f5f5f5"
		android:layout_weight="10"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center" />
	<EditText
		android:id="@+id/txtTestName"
		android:textColorHint="#f5f5f5"
		android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="10"
		android:layout_marginBottom="20dp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:hint="username"
		android:paddingLeft="10dp"
		android:textColor="#f5f5f5"
		local:MvxBind="Text TestAuthor"
	/>
	<MvxSpinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        local:MvxBind="ItemsSource TestTitles;SelectedItem Title" />
	<Button
		android:layout_marginTop="25dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:text="Get Test List"
		android:textColor="#f5f5f5"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="10"
		android:background="@drawable/button_style"
		android:id="@+id/btnConfirmGuessUsername"
		local:MvxBind="Click GetTestListCommand"
	/>

	<Button
		android:layout_marginTop="25dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:text="Confirm"
		android:textColor="#f5f5f5"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="10"
		android:background="@drawable/button_style"
		android:id="@+id/btnConfirmGuessUsername"
		local:MvxBind="Click GuessTestCommand"
	/>

</LinearLayout>